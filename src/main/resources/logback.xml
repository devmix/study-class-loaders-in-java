<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%thread] %logger{36}:%line - %msg%n</pattern>
            <!--<pattern>%d{HH:mm:ss.SSS} [%thread] %logger{36}:%line - %msg%n</pattern>-->
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>